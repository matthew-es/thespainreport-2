<div class="content-admin">

<div class="content-admin-block">
	<%= link_to "Articles", articles_path %>
	<%= link_to "Uploads", uploads_path %>
	<%= link_to "Campaigns", campaigns_path %>
	<%= link_to "Types", types_path %>
	<%= link_to "Languages", languages_path %>
	<%= link_to "Statuses", statuses_path %>
</div>

<p id="notice"><%= notice %></p>

<h1>Campaigns</h1>

<%= link_to 'New Campaign', new_campaign_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Translations</th>
      <th>Teaser</th>
      <th>Button Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td>
					<% campaign.translations.each do |tr| %>
					 <%= link_to tr.language.name, tr %>
					<% end %>
				</td>
				 <td><%= campaign.teaser %></td>
				  <td><%= campaign.buttontext %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>