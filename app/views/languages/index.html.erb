<%= render "articles/admintop" %>

<h1 class="font-header font-header-small font-upper line-115">Languages</h1>

<div class="margin-bottom-20">
	<%= link_to 'New Language', new_language_path %>
</div>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Prompt</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% @languages.each do |language| %>
			<tr>
				<td><%= language.name %></td>
				<td><%= language.prompt %></td>
				<td><%= link_to 'Edit', edit_language_path(language) %></td>
				<td><%= link_to 'Destroy', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

</div>