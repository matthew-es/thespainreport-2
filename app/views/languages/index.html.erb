<div class="content-admin">

<div class="content-admin-block">
	<%= link_to "Articles", articles_path %>
	<%= link_to "Uploads", uploads_path %>
	<%= link_to "Campaigns", campaigns_path %>
	<%= link_to "Types", types_path %>
	<%= link_to "Languages", languages_path %>
	<%= link_to "Statuses", statuses_path %>
</div>

<p id="notice"><%= notice %></p>

<h1>Languages</h1>

<%= link_to 'New Language', new_language_path %>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Prompt</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @languages.each do |language| %>
			<tr>
				<td><%= language.name %></td>
				<td><%= language.prompt %></td>
				<td><%= link_to 'Show', language %></td>
				<td><%= link_to 'Edit', edit_language_path(language) %></td>
				<td><%= link_to 'Destroy', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

</div>