<%= form_with(model: status, local: true) do |form| %>
  <% if status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
      <% status.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong>Name:</strong><%= form.text_field :name %>
    <strong>Background:</strong> (Hex #) <%= form.text_field :colorbackground %>
    <strong>Text:</strong> (Hex #) <%= form.text_field :colortext %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
