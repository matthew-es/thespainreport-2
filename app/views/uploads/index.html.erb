<div class="content-admin">

<div class="content-admin-block">
	<%= link_to "Articles", articles_path %>
	<%= link_to "Uploads", uploads_path %>
	<%= link_to "Campaigns", campaigns_path %>
	<%= link_to "Types", types_path %>
	<%= link_to "Languages", languages_path %>
	<%= link_to "Statuses", statuses_path %>
</div>

<p id="notice"><%= notice %></p>

<h1>Uploads</h1>

<div class="content-admin-block">
	<%= form_with url: uploads_path do |f| %>
		<%= f.file_field :data  %>
		<%= f.submit 'Upload file' %>
	<% end %>
</div>

<div class="content-admin-block">
<table>
	<thead>
		<tr>
			<th>Data</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @uploads.each do |upload| %>
			<tr>
				<td>
					<% if ['.png','.jpg'].include?File.extname(upload.data) %> 
						Image
					<% elsif ['.wav','.mp3'].include?File.extname(upload.data) %>
						Audio
					<% else %>
					<% end %>
				</td>
				<td>
					<% if ['.png','.jpg'].include?File.extname(upload.data) %> 
						![](<%= upload.data %>)
					<% else %>
						<%= upload.data %>
					<% end %>
					</td>
				<td><%= link_to 'Show', upload %></td>
				<td><%= link_to 'Edit', edit_upload_path(upload) %></td>
				<td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>

</div>