<%= render "articles/admintop" %>

<div class="margin-bottom-20">
	<%= form_with url: uploads_path do |f| %>
		<%= f.file_field :data  %>
		<%= f.submit 'Upload file' %>
	<% end %>
</div>

<div class="content-admin-block">
<table>
	<tbody>
		<% @uploads.each do |upload| %>
			<tr>
				<td>
					<% if ['.png','.jpg'].include?File.extname(upload.data) %> 
						Image
					<% elsif ['.wav','.mp3'].include?File.extname(upload.data) %>
						Audio
					<% else %>
					<% end %>
				</td>
				<td>
					<% if ['.png','.jpg'].include?File.extname(upload.data) %> 
						![](<%= 'http://image.thespainreport.es/' + File.basename(upload.data) %>)
					<% else %>
						<%= 'http://audio.thespainreport.es/' + File.basename(upload.data) %>
					<% end %>
					</td>
				<td><%= link_to 'Show', upload %></td>
				<td><%= link_to 'Edit', edit_upload_path(upload) %></td>
				<td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>

</div>