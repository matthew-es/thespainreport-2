<% if !@user.account.subscriptions.blank? %>
<% 
s = @user.account.subscriptions.last

case @language when 1
	subscriptions_amount_title = "Your current level"
	subscriptions_status_title = "Status"
	subscription_amount = (number_to_currency((@level/100.to_f), unit: "â‚¬")).to_s + " / month"
	subscriptions_active = "Active"
	subscriptions_paused = "Paused"
when 2
	subscriptions_amount_title = "Su nivel actual"
	subscriptions_status_title = "Estado"
	subscription_amount = number_to_currency((@level/100.to_f), unit: "", separator: ",", delimiter: ".") + " euros al mes"
	subscriptions_active = "Activa"
	subscriptions_paused = "En pause"
end
%>

<strong><%= subscriptions_amount_title %>:</strong> <%= subscription_amount %>
<br />
<strong><%= subscriptions_status_title %>:</strong>
	<% if s.is_active == true %><span style="background-color: #ccffcc; color: green;"><%= subscriptions_active %></span>
	<% elsif s.is_active == false %><span style="background-color: #ffe6e6; color: #ff0000;"><%= subscriptions_paused %></span>
	<% else end %>
<br />
<% else end %>

<% case @language when 1 %>
  You are
  	<% if @admin %>the boss.
	<% elsif @patron %>a patron.
	<% elsif @reader %>a reader.
	<% else end %>
<% when 2 %>
  Ud. es
	<% if @admin %>el jefe.
	<% elsif @patron %>mecenas.
	<% elsif @reader %>lector.
	<% else end %>
<% end %>
	
<% if @admin %><%= @frame.admin_message %>. <%= link_to @frame.button_cta_increase, @subscribe %>
<% elsif @patron && @user.account.subscriptions.blank? %><%= @frame.patron_5_9_message %>: <%= link_to @frame.button_cta_trial_over, @subscribe %>
<% elsif @patron && @user.account.payments.last.status == "problem" %> <%= @frame.patron_payment_problem_message %>: <%= link_to @frame.patron_super_message, fix_problem_payment_url(@user.account.payments.last.external_payment_id) %>
<% elsif @patron && @patron_paused %><%= @frame.patron_paused_message %>: <%= link_to @frame.button_cta_reactivate, @reactivate %>
<% elsif @patron %><%= @frame.patron_1_4_message %>: <%= link_to @frame.button_cta_increase, @subscribe %>
<% elsif @reader %><%= @frame.reader_45_trial_message %>: <%= link_to @frame.button_cta, @subscribe %>
<% else end %>