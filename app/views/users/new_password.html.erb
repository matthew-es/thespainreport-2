<div class="content">

<%= render "layouts/logo_account" %>

<h1 class="font-header font-header-normal line-120 font-upper">Choose Your New Password</h1>

<p style="margin-bottom: 10px;">Enter your new password here, twice:</p>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><p><%= value.html_safe %></p></div>
<% end %>

<%= form_tag '/change_password' do %>
  <div class="float-left margin-right-10 width-37">
    <%= password_field_tag 'password', nil, class: 'padding-10 width-90', placeholder: 'Type your new password…' %>
  </div>
  <div class="float-left margin-right-10 width-37">
    <%= password_field_tag 'password_confirmation', nil, class: 'padding-10 width-90', placeholder: 'Type your new password again…' %>
  </div>
  <div class="float-left padding-5">
    <button type="submit" class="blueformbutton">Save New Password</button>
  </div>
  <div class="clear"></div>
  <%= hidden_field_tag 'confirm_token', params[:id] %>
<% end %>

<%= render 'passwords_explanation' %>

</div>