<%= form_tag '/change_password' do %>
	<% if @user.sitelanguage == 1 %>
		<div class="float-left margin-right-10 width-100 margin-top-5">
			<%= password_field_tag 'password', nil, class: 'padding-10 width-90', placeholder: 'Type your new password…' %>
		</div>
		<div class="float-left margin-right-10 width-100 margin-top-5">
			<%= password_field_tag 'password_confirmation', nil, class: 'padding-10 width-90', placeholder: 'Type your new password again…' %>
		</div>
		<div class="float-left margin-top-5">
			<button type="submit" class="padding-7 font-main-small">Save</button>
		</div>
	<% elsif @user.sitelanguage == 2 %>
		<div class="float-left margin-right-10 width-100 margin-top-5">
			<%= password_field_tag 'password', nil, class: 'padding-10 width-90', placeholder: 'Introduzca su nueva clave…' %>
		</div>
		<div class="float-left margin-right-10 width-100 margin-top-5">
			<%= password_field_tag 'password_confirmation', nil, class: 'padding-10 width-90', placeholder: 'Introdúzcala de nuevo…' %>
		</div>
		<div class="float-left margin-top-5">
			<button type="submit" class="padding-7 font-main-small">Guardar</button>
		</div>
	<% else end %>
	<div class="clear"></div>
	<%= hidden_field_tag 'confirm_token', params[:id] %>
<% end %>