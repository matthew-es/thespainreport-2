<div class="margin-top-5 margin-bottom-5 padding-10">
	<% if current_user.nil? %>
		<%= form_tag '/login' do %>
			<%= text_field_tag 'email', nil, class: 'padding-5 font-main font-main-small', placeholder: 'Your e-mail...' %>
			<%= password_field_tag 'password', nil, class: 'padding-5 font-main font-main-small', placeholder: 'Your password...' %>
			<button type="submit" class="padding-5 font-main-small">Log In</button>
			<a href="/password">New password?</a>
		<% end %>
	<% elsif !current_user.nil? %>
		<% if current_user.role == 1 %>
			<%= link_to 'Admin', new_tweet_path %> |
		<% else end %>
		<%= current_user.email %>
		| 
		<% if current_user.sitelanguage == 1 %>
			<%= link_to 'My Details', edit_user_path(current_user) %>
		<% elsif current_user.sitelanguage == 2 %>
			<%= link_to 'Mis Datos', edit_user_path(current_user) %>
		<% else end %>
		| 
		<% if current_user.sitelanguage == 1 %>
			<%= link_to 'Logout', users_logout_path %>
		<% elsif current_user.sitelanguage == 2 %>
			<%= link_to 'Salir', users_logout_path %>
		<% else end %>
	<% else %>
	<% end %>
</div>
<div class=="clear"></div>