<%= render "articles/admintop" %>

<h1 class="font-header font-header-small font-upper line-115">Types</h1>

<div class="margin-bottom-20">
	<%= link_to 'New Type', new_type_path %>
</div>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Language</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% @types.each do |type| %>
			<tr>
				<td><%= link_to type.name, type %></td>
				<td><%= type.language.try(:name) %></td>
				<td><%= link_to 'Edit', edit_type_path(type) %></td>
				<td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

</div>