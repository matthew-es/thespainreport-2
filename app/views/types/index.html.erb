<div class="content-admin">

<div class="content-admin-block">
	<%= link_to "Articles", articles_path %>
	<%= link_to "Uploads", uploads_path %>
	<%= link_to "Campaigns", campaigns_path %>
	<%= link_to "Types", types_path %>
	<%= link_to "Languages", languages_path %>
	<%= link_to "Statuses", statuses_path %>
</div>

<p id="notice"><%= notice %></p>

<h1>Types</h1>

<%= link_to 'New Type', new_type_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type.language.try(:name) %></td>
        <td><%= link_to 'Show', type %></td>
        <td><%= link_to 'Edit', edit_type_path(type) %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>