<% title "The Spain Report" %>
<% content_for :meta do %>
	<meta name="description" content="The Spain Report" />
	<link rel="canonical" href="<%= root_url %>" />
	<meta name="author" content="Matthew Bennett">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	
	<meta name="twitter:card" content="summary" />
	<meta name="twitter:site" content="@thespainreport" />
	<meta name="twitter:creator" content="@matthewbennett" />
	<meta name="twitter:title" content="The Spain Report" />
	<meta name="twitter:description" content="The Spain Report" />
	<meta property="og:site_name" content="The Spain Report"/>
	<meta property="og:url" content="<%= root_url %>"/>
	<meta property="og:type" content="article" />
	<meta property="og:title" content="The Spain Report"/>
  	<meta property="og:description" content="The Spain Report"/>
 	<meta property="og:article:author" content="Matthew Bennett"/>
 	<meta property="og:article:section" content="Spain"/>
<% end %>

<div class="content">

<%= render "articles/logo_account" %>

<% @latesttop.each do |article| %>
	 <% if article.image? %>
		<div class="">
		  <%= link_to(article, class: "no-hover-bg") do %>
			 <%= image_tag ('https://image.thespainreport.es/' + article.image) unless article.image.nil? %>
		  <% end %>
	 <% else %>
	 <% end %>
	 
	 <% if article.video.present? %>
		<div class="video-wrapper">
			<%= content_tag(:iframe, nil, frameborder: 0, src: "//www.youtube.com/embed/#{article.video}?rel=0&amp;showinfo=0") %>
		</div>
	<% else %>
	<% end %>
	 
	 <h1 class="font-header font-header-normal line-120 font-upper margin-top-0 margin-bottom-5">
		 <%= link_to article do %>
		  <%= link_to article.headline, article %>
		<% end %>
	 </h1>
	 
	 <div class="font-main font-main-normal font-italic"><span class="font-bold"><%= article.type.name %>:</span> <%= article.lede %></div>
 
	<% if article.updates.published.any? %>
		<ul class="margin-top-5 margin-bottom-0 margin-left-20 margin-right-0">
	      <% article.updates.each do |u| %>
	        <li><%= link_to u.headline, article_path(article, anchor: u.id) %></li>
	      <% end %>
	    </ul>
   <% else %>
   <% end %>

 <% end %>
 
 <h3>Latest</h3>
 <ul class="no-points">
 <% @latest.each do |article| %>
 	<li class="margin-bottom-5 font-main font-main-small"><%= article.type.name %>: <%= link_to article.headline, article %>
		<% if article.updates.published.present? %>
			<ul class="margin-top-5 margin-bottom-0 margin-left-20 margin-right-0">
		      <% article.updates.each do |u| %>
		        <li class="margin-bottom-0 font-main font-main-small"><%= link_to u.headline, article_path(article, anchor: u.id) %></li>
		      <% end %>
		    </ul>
	   <% else %>
	   <% end %>
	</li>
 <% end %>
 </ul>
 
 <%= render 'articles/log_in_logic' %>
 
 <h3>Articles by type</h3>
 <% @types.each do |t| %>
 		<% if t.articles.any? %>
 			<%= link_to t.name, t %>
 		<% else %>
 		<% end %>
 <% end %>
 
 <% if @latestnotes.any? %>
	 <h3>Latest Notes</h3>
	 <ul class="no-points">
	 <% @latestnotes.each do |article| %>
	 	<li class="margin-bottom-5 font-main font-main-small">
 			<%= article.type.name %>: <%= link_to article.headline, article %>
		</li>
	 <% end %>
	 </ul>
 <% else %>
 <% end %>

<%= render "layouts/footer" %>

</div>