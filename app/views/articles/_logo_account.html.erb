<div class="width-100 height-15 margin-bottom-20">
	
<%= link_to(root_url, class: 'logo') do %>
	<span class="label font-main font-main-normal font-upper background-color-red">
		<span class="font-color-yellow">The</span> <span class="font-color-orange">Spain</span> <span class="font-color-yellow">Report</span>
	</span>
<% end %>

<div class="float-right padding-top-2 font-main font-main-small">
<% if controller_name == "articles" && action_name == "show" || controller_name == "home" && ["index", "es"].include?(action_name) || controller_name == "users" && action_name == "edit" %>
	<% if current_user.nil? %>
		<%= form_tag '/login' do %>
			<%= text_field_tag 'email', nil, class: 'input200', placeholder: 'Your e-mail...' %>
			<%= password_field_tag 'password', nil, class: 'input170', placeholder: 'Your password...' %>
				<% if flash[:password] %>
					<br />
					<div class="web-width">
						<a href="<%= new_password_reset_path %>" style="font-size: 11px; color: #F1BF00 !important; padding: 2px 0px 0px 10px; text-decoration:underline !important;">Want a new password?</a>
					</div>
					<div class="mobile-width">
						<a href="<%= new_password_reset_path %>" style="font-size: 11px; color: #AA151B !important; margin: 0px; padding: 0px 0px 0px 10px; text-decoration:underline !important;">New password?</a>
					</div>
				<% end %>
			<button type="submit" class="blueformbutton">Log In</button>
		<% end %>
	<% elsif !current_user.nil? %>
		<% if current_user.role == 1 %>
			<%= link_to 'Admin', new_tweet_path %> |
		<% else end %>
		<%= current_user.email %>
		| 
		<% if current_user.sitelanguage == 1 %>
			<%= link_to 'My Account', edit_user_path(current_user) %>
		<% elsif current_user.sitelanguage == 2 %>
			<%= link_to 'Mi Cuenta', edit_user_path(current_user) %>
		<% else end %>
		| 
		<% if current_user.sitelanguage == 1 %>
			<%= link_to 'Logout', users_logout_path %>
		<% elsif current_user.sitelanguage == 2 %>
			<%= link_to 'Salir', users_logout_path %>
		<% else end %>
	<% else %>
	<% end %>
<% else %>
<% end %>
</div>
</div>