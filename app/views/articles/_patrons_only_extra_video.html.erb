<% if @article.extras_video.present? %>
	<h3>
		<% case @article.language_id when 1 %>More Video:
		<% when 2 %>Más Vídeo:
		<% end %>
		<%= @article.extras_video_teaser %>
	</h3>

	<div class="">
		<%= markdown(@article.extras_video_intro).html_safe %>
	</div>
	
	<div class="video-wrapper">
		<% if @article.extras_video.match(/^[0-9]+$/) %>
			<%= content_tag(:iframe, nil, frameborder: 0, src: "https://player.vimeo.com/video/#{@article.extras_video}") %>
		<% else %> 
			<%= content_tag(:iframe, nil, frameborder: 0, src: "//www.youtube.com/embed/#{@article.extras_video}?rel=0&amp;showinfo=0") %>
		<% end %>
	</div>
<% else end %>