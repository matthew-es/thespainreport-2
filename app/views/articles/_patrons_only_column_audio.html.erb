<% if ["Sólo mecenas", "Patrons only"].include?@article.type.name %>
	<% if @article.extras_audio_file.present? %>
		<h3>
			<% case @article.language_id when 1 %>More Audio:
			<% when 2 %>Más Audio:
			<% end %>
			<%= @article.extras_audio_teaser %>
		</h3>

		<div class="font-main font-main-normal">
			 <%= @article.extras_audio_intro %>
		</div>
		
		<div class="margin-left-20 margin-top-10 margin-bottom-20">
			<audio controls>
			 	<source src="<%= 'https://audio.thespainreport.es/' + @article.extras_audio_file %>" type="audio/mpeg">
				Your browser does not support the audio element.
			</audio>
		</div>
	<% else end %>
<% else end %>