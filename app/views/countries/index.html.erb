  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td>
          <% if false %><img src="<%= asset_path(country.country_code + '.jpg') unless Rails.application.assets.find_asset(country.country_code + '.jpg').nil? %>" /><% end %>
